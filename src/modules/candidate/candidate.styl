@require './../../../styles/colors.styl'

.candidate-photo 
  width 12.1rem 
  height 12.1rem 
  border 0.07rem solid mainBlue 
  border-radius 100% 
  margin auto 
  
  &__inside-circle
    border 0.07rem solid mainBlue 
    background-color mainBlue 
    margin 0.67rem
    height 10.6rem 
    width 10.6rem 
    border-radius 100% 

.candidate-name 
    text-align center 
    line-height 1.57rem 
    text-transform uppercase 
    padding-top 2.39rem 

    &__first-name 
      font-size 2.3rem 
      font-weight 200 

    &__surname 
      padding-top 0.5rem 
      font-size 2.4rem 
      letter-spacing 0.2rem 
      font-weight bold 

    &__proffesion 
      font-size 1rem 
      letter-spacing 0.05rem 
      font-weight bold 
