include ./modules/candidate/candidate.pug
include ./modules/profile/profile.pug
include ./modules/contact/contact.pug
include ./modules/skill/skill.pug
include ./modules/education/education.pug
include ./modules/experience/experience.pug
include ./modules/software/software.pug

doctype html 
html(lang="ru")
    head 
        meta(charset="utf-8") 
        title "resume" 
    body
        .resume
            .resume__column.resume__column_left
                .resume-elements.resume-elements__candidate
                    +candidate({imageUrl: 'mock-image', 
                        name: 'name here', 
                        surname: 'surname', 
                        profession: 'graphic designer'})
                .resume-elements.resume-elements__profile
                    +title({name: 'profile'})
                    +profile({text: 'Lorem ipsum dolor sit amet, consectetur adipisicing elit.Odit vero dolorem suscipit molestias asperiores placeat iusto ab aperiam, nemo, ipsum labore veniam. Nesciunt unde similique, odio facere! Ea, non aliquam.Lorem ipsum dolor sit amet,consectetur adipisicing elit.Minima odio dicta, esse. Omnis laudantium dolorem, quisquam saepe, cum magni,totam tenetur labore natus, suscipit debitis illo. Rem illo consequuntur consequatur.Lorem ipsum dolor sit amet, consectetur ', 
