                .resume-elements.resume-elements__contact
                    +title({name: 'contact'})
                    +contact({address: 'Main Street, City.', 
                        eMail: 'contact@domain.com',
                        phone: '123123123',
                        website: 'www.yourweb.com' })
                .resume-elements.resume-elements__skills
                    +title({name: 'skills'})
                    +skill({name: 'creative',
                                    valueScale: 9,
                                    lengthScale: 12})
                    +skill({name: 'teamwork', 
                                    valueScale: 11,
                                    lengthScale: 12})
                    +skill({name: 'innovate', 
                                    valueScale: 6, 
                                    lengthScale: 12})
                    +skill({name: 'communication', 
                                    valueScale: 11, 
                                    lengthScale: 12})
            .resume__column.resume__column_right
                .resume-elements.resume-elements__education
                    +title({name: 'education'})
                    +education
                .resume-elements.resume-elements__experience
                    +title({name: 'experience'})
                    +experience
                .resume-elements.resume-elements__software
                    +title({name: 'software'})
                    +software({name: 'photoshop',
                                       percentValue: 95})
                    +software({name: 'dreamweaver',
                                       percentValue: 85})
                    +software({name: 'illustrator',
                                       percentValue: 75})
                    +software({name: 'after effects',
                                       percentValue: 70})
                    +software({name: 'indesign',
                                       percentValue: 60})
                    +software({name: 'html & css3',
                                       percentValue: 95})