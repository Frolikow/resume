@font-face 
  font-family "Myriad Pro"
  src url(fonts/myriadPro.ttf) 
  src url(fonts/myriadPro.svg) 
  src url(fonts/myriadPro.eot) 
  src url(fonts/myriadPro.woff) 
 
html 
  font-size  16px 
  color #000 
  background-color  #fff 
  font-family  "Myriad Pro", Arial, sans-serif 
 
body  
  margin  0 
  padding  0.7rem 
  text-align  center 

.bold 
  font-weight  bold 
 
.resume  
  margin  2.85rem auto 
  &__column 
    display  inline-block 
    vertical-align  top 
    text-align  left 
    min-width  22rem 
    padding  2.5rem 
    width  50%  
  &__columnLeft 
    max-width  25rem 
  &__columnRight 
    max-width  39.3rem 

.content 
  color  black 
 
.title 
  line-height  3.57rem 
  margin-left  0 
  margin-bottom  0 
  background  url(icons/icons.jpg) no-repeat 0 0.5rem 
  font-size  2.14rem 
  background-size  5rem  
  overflow  hidden 
  padding-left  4.28rem 
  color  #036FBC 
  margin-top  2.86rem 
  text-transform  uppercase 
  &__line 
    overflow  hidden 
  &__line:after 
    margin-right  -100% 
    margin-bottom  0.71rem 
    margin-left  0.71rem 
    content  '' 
    display  inline-block 
    box-sizing  border-box 
    width  100% 
    height  0.21rem 
    background  #036FBC 
 
.candidate
  &__photo 
    width  12.1rem 
    height  12.1rem 
    border  0.07rem solid #036FBC 
    border-radius  100% 
    margin  auto  
  &__photo_inside 
    border  0.07rem solid #036FBC 
    background-color  #036FBC 
    margin  0.67rem  
    height  10.6rem 
    width  10.6rem 
    border-radius  100% 
  &__name 
    text-align  center 
    line-height  1.57rem 
    text-transform  uppercase 
    padding-top  2.39rem 
    &_firstName 
      font-size  2.3rem 
      font-weight  200 
    &_surname 
      padding-top  0.5rem 
      font-size  2.4rem 
      letter-spacing  0.2rem 
      font-weight  700 
    &_proffesion 
      font-size  1rem 
      letter-spacing  0.05rem 
 
.titleProfile 
  background-position  -0.45rem -0.5rem 
.titleContact 
  background-position  -0.45rem -4.3rem 
 
.contact-table 
  text-align  left 
 
.contact-question 
  color  #036FBC 
  padding-top  1.78rem 
  vertical-align  bottom 
  text-transform  uppercase 
 
.contact-value 
  padding-left  2.14rem 
  padding-top  1.07rem 
  vertical-align  bottom 
 
.titleSkills 
  background-position  -0.45rem -8.1rem 
 
.content__skill 
  text-align  center 
 
.skill 
  margin-bottom  0 
  font-size  1.28rem 
  font-weight  normal 
  text-transform  uppercase 
  &__level 
    text-align  center 
    margin-top  0.35rem 
    padding  0 
  &__value 
    list-style  none 
    border  0.57rem solid #E7E7E7 
    display  inline-block 
    border-radius  100% 
    margin-right  0.5rem 
 
.value_color-blue 
  border-color  #036FBC 
 
.titleEducation 
  background-position  -0.45rem -12rem 
 
.content__education 
  padding-left  0.57rem 
  font-size  1.28rem 
 
.education 
  list-style  none 
  background  url(icons/list-style.jpg) no-repeat 0 0.1rem 
  padding-left  2.86rem 
  background-size  1.28rem 
  &__level_color-blue 
    color #036FBC 
    text-transform  uppercase 
  &__university_font-courier 
    margin-top  0.35rem 
    margin-bottom  0 
    padding-bottom  0 
    font-family  "Courier" 
    text-transform  uppercase 
  &__university_content-lorem 
    font-size  1rem 
  &__job_content-lorem 
    font-size  1rem 
 
.titleExpirience 
  background-position  -0.45rem -15.75rem    
 
.content__expirience 
  padding-left  0.57rem 
  font-size  1.43rem 
 
.expirience 
  list-style  none 
  background  url(icons/list-style.jpg) no-repeat 0 0.1rem 
  padding-left  2.86rem 
  background-size  1.28rem 
  &__company-name 
    text-transform  uppercase 
  &__job_font-courier 
    margin-top  0.35rem 
    margin-bottom  0 
    padding-bottom  0 
    font-family  "Courier" 
    text-transform  uppercase 
 
.titlesoftware 
  background-position  -0.45rem -19.78rem   

.software
  &__level 
    display  inline-block 
    margin  1.43rem 1.43rem 0 0 
    font-size  1.28rem 
    text-transform  uppercase 
    &_color-gray 
      background-color  #e7e7e7 
      width  18rem 
      height  1.43rem 
    &_color-blue 
      background-color  #036fbc 
      height  100% 
      width  100% 
    &_photoshop 
      width  95% 
    &_dreamweaver 
      width  85% 
    &_illustrator 
      width  75% 
    &_afterEffects 
      width  70% 
    &_indesign 
      width  60% 
    &_htmlCss3 
      width  95% 